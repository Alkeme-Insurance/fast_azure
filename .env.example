# ============================================
# Fast Azure - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb://mongo:27017

# ============================================
# Backend (FastAPI) Configuration
# ============================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Azure AD Authentication (Frontend)
# ============================================
# Your Azure AD Application (Client) ID
VITE_AZURE_CLIENT_ID=

# Your Azure AD Directory (Tenant) ID
VITE_AZURE_TENANT_ID=

# Redirect URI after login
VITE_AZURE_REDIRECT_URI=http://localhost:3000

# Redirect URI after logout
VITE_AZURE_POST_LOGOUT_REDIRECT_URI=http://localhost:3000

# API Scope for backend access
VITE_AZURE_API_SCOPE=

# ============================================
# Development Mode
# ============================================
# Set to 'false' to enable Azure AD authentication
VITE_DEV_NO_AUTH=true

# ============================================
# Frontend Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE=ws://localhost:8000
VITE_METRICS_SOURCE=synth
